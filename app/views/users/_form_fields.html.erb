<div class='form-group'>
  <% if form.object_name == 'user' %>
    <%= form.label :name, class: 'col-form-label col-form-label-sm' %>
    <%= form.text_field :name, class: 'form-control form-control-sm', required: true %>
  <% end %>
</div>
<div class='form-group'>
  <%= form.label :email, class: 'col-form-label col-form-label-sm' %>
  <%= form.email_field :email, type: :email, class: 'form-control form-control-sm', required: true %>
</div>
<div class='form-group'>
  <%= form.label :password, class: 'col-form-label col-form-label-sm' %>
  <%= form.password_field :password, class: 'form-control form-control-sm', required: true %>
</div>
<div class='form-group'>
  <% if form.object_name == 'user' %>
    <%= form.label :password_confirmation, class: 'col-form-label col-form-label-sm' %>
    <%= form.password_field :password_confirmation, class: 'form-control form-control-sm', required: true %>
  <% end %>
</div>
