<div class='form-group container mx-0 p-0'>
  <%= form.label :date, class: 'col-form-label d-block' %>
  <%= form.datetime_select :date, {start_year: Time.current.year, default: Time.now, use_short_month: true}, {class: "form-control col-md-2 d-inline-block"} %>
</div>
<div class='form-group'>
  <%= form.label :description, class: 'col-form-label' %>
  <%= form.text_area :description, size: "20x20", class: 'form-control', required: true %>
</div>
