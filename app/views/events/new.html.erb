<% provide(:title, "New Event") %>

<div class="col-md-6 col-md-offset-3">
  <h1>New Event</h1>

  <%= form_with(model: [@current_user, @event], local: true) do |f| %>
    <%= render 'errors/errors', object: @event %>

    <%= f.label :description %>
    <%= f.text_area :description, size: "20x20", class: 'form-control' %>
    <br>
    <%= f.submit 'Create', class: "btn btn-primary" %>
  <% end %>
</div>
